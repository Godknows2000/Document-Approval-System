@model IndexModel
@if (User.IsEmployee())
{
    @if (Model.List.Any())
    {
        <div class="ms-3">
            <div class="h4 mt-2">@("Document approval".ToQuantity(Model.List.TotalItemCount))</div>
            <div class="row mt-2 g-2">
                @foreach (var item in Model.List)
                {
                    <div class="col-lg-4 col-md-6 col-sm-12 mb-3 ">
                        <div class="card shadow-sm">
                            <div class="card-header">
                                <a asp-page="./Details" asp-route-id="@item.Id">  <i class="fa-solid fa-dollar-sign"></i>&nbsp;@item.Number</a>
                            </div>
                            <div class="card-body">
                                <div class="card-body">
                                    <div>
                                        <div class="mb-1"><label class="form-label">Document Name:</label> @item.DocType?.Name</div>
                                        <div class="mb-1"><label class="form-label">Department:</label> @item.Department?.Name</div>
                                        <div class="mb-1"><label class="form-label">Creation date:</label> @item.CreationDate.ToString("dd/MM/yyyy")</div>
                                        <div class="mb-1"> @item.Status.ToHtml()</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    }
}
